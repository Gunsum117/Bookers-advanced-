<div>
	<% if flash[:notice] %>
  		<p><%= flash[:notice] %></p>
	<% end %>

	<h2> <%= current_user.name %> さん </h2>
	<p><%= current_user.introduction %></p>

	<div class ="profile-image clearfix"><%= attachment_image_tag current_user, :profile_image, :fill, 200, 200, format: 'jpeg' ,fallback: "no_image.jpg", class: "profile-thumb" %>
	</div>
	<br>
	<p><%= link_to "", edit_user_path(current_user), class:"btn btn-default glyphicon glyphicon-cog"%></p>
</div>


<h3>New Book</h3>
<%= form_for(book) do |f| %>
 
    <h4>タイトル</h4>
    <%= f.text_field :title %>
 
    <h4>本文</h4>
    <%= f.text_area :body %>
 	
 	<br>
    <%= f.submit 'create Book', class:"btn btn-primary"%>
 
<% end %>