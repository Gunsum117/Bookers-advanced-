<%= render 'users/header', user: @user, book:@book %>




<div class = "container">
  <div class = "row">

    <div class = "col-lg-3">
      <div>
        <% if flash[:notice] %>
          <p><%= flash[:notice] %></p>
        <% end %>

        <h2> <%= @user.name %> さん </h2>
        <p><%= @user.introduction %></p>

        <div class ="profile-image clearfix"><%= attachment_image_tag @user, :profile_image, :fill, 200, 200, format: 'jpeg' ,fallback: "no_image.jpg", class: "profile-thumb" %>
        </div>
        <br>
        <p><%= link_to "", edit_user_path(@user), class:"btn btn-default glyphicon glyphicon-cog"%></p>
       </div>


      <h3>New Book</h3>
      <%= form_for(@book) do |f| %>

      <h4>タイトル</h4>
      <%= f.text_field :title %>

      <h4>本文</h4>
      <%= f.text_area :body %>

      <br>
      <%= f.submit 'create Book', class:"btn btn-primary"%>

      <% end %>
  </div>



<div class = "col-lg-7">

<table class="table table-striped", width="800">
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    <% @books.each do |book| %>
        <tr>
            <td><%= link_to attachment_image_tag(@user, :profile_image, format:"jpeg", fallback:"no_image.jpg", size:"20x20"), user_path(@user) %></td>
            <% a = book.title %>
            <td><%= link_to a, book_path(book), class:"show_#{@book.id} "%></td>
            <td><%= book.body %></td>
            </td>
        </tr>
    <% end %>
</table>
</div>

  </div>
</div>