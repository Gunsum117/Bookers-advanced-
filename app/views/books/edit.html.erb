<%= render 'users/header', user:@user , book:@book %>

<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, class:"book_title"  %>

    <h4>Body</h4>
    <%= f.text_area :body, class:"book_body"  %>
    <p>
    <%= f.submit 'Update Book' %>
    </p>

<% end %>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>
